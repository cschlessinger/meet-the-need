<div id='unassigned'>
  <div class='col-md-6'>
    <h1>My Unassigned Projects</h1>
    <% if @unassigned_projects.any? %>
      <% i = 0 %>
      <% @unassigned_projects.each do |project| %>
        <div class="card">
          <p class='no-image-title'><%=  project.title %>
          <div class='text'>
            <p class='date'>Created at: <%= project.created_at.strftime("%m/%d/%Y") %></p>
            <p class='cost'>Cost: $<%= project.cost %></p>
            <% if project.technologies.any? %>
              <div class='tags'>
                <% project.technologies.each do |technology| %>
                  <figure class='tech tag'><%= technology.name %></figure>
                <% end %>
              </div>
            <% end %>
            <% if project.topics.any? %>
              <div class='tags'>
                <% project.topics.each do |topic| %>
                  <figure class='topic tag'><%= topic.name %></figure>
                <% end %>
              </div>
            <% end %>
            <a href="#"><div class= "<%= i %> green-button get-developers">Match developers</div></a>
          </div>
        </div>
      <% i += 1 %>
      <% end %>
    <% else %>
      <p>You have no unassigned projects!</p>
    <% end %>
  </div>

  <div class="col-md-6">
    <h1> Matching Developers </h1>
    <div class="developer_details">
      <% if @top_unique_matching_three.any? %>
        <% @top_unique_matching_three.each do |developer| %>
          <div class='card'>
            <%= image_tag "default-avatar.png" %>
            <p class='title'><%=  developer.first_name %> <%=  developer.last_name %></p>
            <div class='text'>
              <p class='tagline'><%= developer.tagline %></p>
              <p class='date'>Created at: <%= developer.created_at.strftime("%m/%d/%Y") %></p>
              <% if developer.technologies.any? %>
                <div class='tags'>
                  <% developer.technologies.each do |technology| %>
                    <figure class='tech tag'><%= technology.name %></figure>
                  <% end %>
                </div>
              <% end %>
              <% if developer.topics.any? %>
                <div class='tags'>
                  <% developer.topics.each do |topic| %>
                    <figure class='topic tag'><%= topic.name %></figure>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>Use the "match developers" buttons in each project card to find corresponding developer matches!</p>
      <% end %>
    </div>
  </div>
</div>