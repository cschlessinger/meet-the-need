<%= form_for(@customer) do |f| %>

  <div class="form_field"><%= label_tag(:first_name, "First name") %>
  <%= f.text_field :first_name, placeholder: @customer.first_name %></div>
  <div class="form_field"><%= label_tag(:last_name, "Last name") %>
  <%= f.text_field :last_name, placeholder: @customer.last_name %></div>
  <div class="form_field"><%= label_tag(:bio, "Tell us about yourself!") %>
  <%= f.text_area :bio, placeholder: @customer.bio %></div>
  <div class="form_field"><%= label_tag(:zipcode, "Zipcode - for connecting you to local projects, if you wish") %>
  <%= f.text_field :zipcode, placeholder: @customer.zipcode %></div>

  <%= f.submit %>
<% end %>