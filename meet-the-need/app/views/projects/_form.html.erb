<%= form_for @project, url: {action: "create"} do |f| %>
  <div class='form-field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='form-field'>
    <%= f.label :description %>
    <%= f.text_area :body %>
  </div>
  <div class='form-field'>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>
  <div>
    <%= f.fields_for :topics do |topic_form| %>
      <%= f.label :topics %>
      <%= topic_form.text_field :name %>
    <% end %>
  </div>
  <div>
    <% @unselected_topics.each do |topic| %>
                <p><figure class='topic tag'><%= topic.name %></figure>
                <%= link_to developer_topics_path(:developer_id => current_developer.id, :topic_id => topic.id), method: :post do %>
                  <%= image_tag 'plus.ico', class: "plus-minus" %></p>
                <% end %>
              <% end %>
            <% else %>
  </div>
  <div class="actions">
    <%= f.submit "Create project", class: "green-button" %>
  </div>
<% end %>

