<div>
	<h1>My Requested Projects</h1>
	<div id='project-area'></div>
	<% if @requests.any? %>
		<% @requests.each do |request| %>
			<div class='card col-md-6'>
        <div class='card-no-image-title'><%= request.project.title %></div>
        <div class='text'>
          <%= link_to profile_customer_path(request.project.customer_id) do %>
          <p class='project-customer'>Requested from <span class='name'><%= request.customer.first_name %> <%= request.customer.last_name %></span></p>
          <% end %>
        	<p>on <%= request.created_at.strftime("%m/%d/%Y") %> </p>
        </div>
      </div>
    <% end %>
	<% end %>
</div>