<div class="col-md-12 project_details">
  <h1>Project Search Results</h1>
  <% if @project_search_results.any? %>
    <% @project_search_results.each do |project| %>
      <div class='col-md-6 card interior'>
        <%= image_tag project.customer.avatar_url %>
        <%= link_to(project) do %>
          <p class='card-image-title'><%= project.title %></p>
        <% end %>
        <div class='text'>
          <%= link_to profile_customer_path(project.customer_id) do %>
            <p class='name'><%= project.customer.first_name %> <%= project.customer.last_name %></p>
          <% end %>
          <p class='date'>Created <%= project.created_at.strftime("%m/%d/%Y") %></p>
          <% if project.technologies.any? %>
            <div class='tags'>
              <% project.technologies.each do |technology| %>
                <figure class='tech tag'><%= technology.name %></figure>
              <% end %>
            </div>
          <% end %>
          <% if project.topics.any? %>
            <div class='tags'>
              <% project.topics.each do |topic| %>
                <figure class='topic tag'><%= topic.name %></figure>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No results!</p>
  <% end %>
</div>
