  <div class="project_details">
    <% if @project_search_results.any? %>
      <h1>Project Search Results</h1>
        <% @project_search_results.each do |project| %>
          <%= link_to(project) do %>
          <article>
            <div class="image"><img src="./default-avatar.png"></div>
            <%= project.title %>, by
            <%= project.customer.first_name %>
            <%= project.customer.last_name %><br>
            <% if project.technologies.any? %>
              Technologies:
              <% project.technologies.each do |technology| %>
              <%= technology.name %>
              <% end %>
            <% end %>
            <% if project.topics.any? %>
              Topics:
              <% project.topics.each do |topic| %>
              <%= topic.name %>
              <% end %>
            <% end %>
              Created at:
            <%= project.created_at.strftime("%m/%d/%Y") %>
          </article><br>
        <% end %>
      <% end %>
    <% else %>
      No results!
    <% end %>
    <% if @developer_search_results.any? %>
    <h1>Developer Search Results</h1>
      <% @developer_search_results.each do |developer| %>
        <article>
          <div class="image"><img src="./default-avatar.png"></div>
          <%= developer.first_name %>
          <%= developer.last_name %><br>
      <% end %>
    <% end %>
  </div>
